<% @page_subheading = link_to("inbox", messages_path, :class => "button") if @admin_view %>

<div id="contact" class="clearfix">
  <h2>Send me a message...</h2>
  <div id="contact_form" class="clearfix">
    <%= form_for @message, :remote => true do |f| %>
      <%= f.label 'Name' %>
      <%= f.text_field :name, :autocomplete => :off %>

      <%= f.label 'Email *' %>
      <%= f.text_field :email, :autocomplete => :off %>

      <%= f.label 'Message *' %>
      <%= f.text_area :body, :autocomplete => :off %>

      <%= content_tag 'div', raw(recaptcha_tag(:challenge, :display => {:theme => 'blackglass'})), :class => 'captcha_widget' %>

      <%= f.submit 'Send', :class => 'button' %>
    <% end %>
  </div>
</div>

<div id="follow" class="clearfix">
  <h2>Follow me...</h2>
  <div id="follow_me_box">
    <%= link_to image_tag('icons/twitter.png', :class => 'twitter'), "http://twitter.com/bvsatyaram", :target => "_blank" %>
    <%= link_to image_tag('icons/facebook.png', :class => 'facebook'), "http://facebook.com/bvsatyaram", :target => "_blank" %>
    <%= link_to image_tag('icons/linkedin.jpg', :class => 'linkedin'), "http://in.linkedin.com/in/bvsatyaram", :target => "_blank" %>
    <%= link_to image_tag('icons/buzz.jpg', :class => 'buzz'), "https://profiles.google.com/bvsatyaram/posts#bvsatyaram/buzz", :target => "_blank" %>
  </div>
</div>